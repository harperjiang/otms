<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:aop="http://www.springframework.org/schema/aop"
	xmlns:tx="http://www.springframework.org/schema/tx" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans  
                     http://www.springframework.org/schema/beans/spring-beans.xsd  
                     http://www.springframework.org/schema/tx  
                     http://www.springframework.org/schema/tx/spring-tx.xsd  
                     http://www.springframework.org/schema/aop  
                     http://www.springframework.org/schema/aop/spring-aop.xsd ">
	<bean id="dataSource" class="org.harper.otms.common.dao.BlankDataSource" />

	<bean id="entityManagerFactory"
		class="org.springframework.orm.jpa.LocalEntityManagerFactoryBean">
		<property name="persistenceUnitName" value="calendar" />
	</bean>

	<bean id="transactionManager" class="org.springframework.orm.jpa.JpaTransactionManager">
		<constructor-arg ref="entityManagerFactory" />
	</bean>

	<bean id="entityManager"
		class="org.springframework.orm.jpa.support.SharedEntityManagerBean">
		<property name="entityManagerFactory" ref="entityManagerFactory" />
	</bean>

	<!-- tx:advice id="txAdvice" transaction-manager="transactionManager"> <tx:attributes> 
		<tx:method name="find*" read-only="true" /> <tx:method name="get*" read-only="true" 
		/> <tx:method name="read*" read-only="true" /> <tx:method name="search*" 
		read-only="true" /> <tx:method name="*" /> </tx:attributes> </tx:advice -->

	<bean id="txAdvice" class="org.harper.otms.common.jpa.OTMSTransactionInterceptor">
		<property name="transactionManager" ref="transactionManager" />
		<property name="transactionAttributes">
			<props>
				<prop key="read*">PROPAGATION_REQUIRED,ISOLATION_DEFAULT,readOnly
				</prop>
				<prop key="get*">PROPAGATION_REQUIRED,ISOLATION_DEFAULT,readOnly
				</prop>
				<prop key="find*">PROPAGATION_REQUIRED,ISOLATION_DEFAULT,readOnly
				</prop>
				<prop key="search*">PROPAGATION_REQUIRED,ISOLATION_DEFAULT,readOnly
				</prop>
				<prop key="view*">PROPAGATION_REQUIRED,ISOLATION_DEFAULT,readOnly
				</prop>
				<prop key="*">PROPAGATION_REQUIRED,ISOLATION_DEFAULT</prop>
			</props>
		</property>
	</bean>

	<bean id="errorHandler" class="org.harper.otms.common.service.ErrorHandler">
	</bean>

	<bean id="tokenManager" class="org.harper.otms.auth.service.impl.TokenManagerImpl" />

	<bean id="tokenValidator" class="org.harper.otms.auth.service.impl.TokenValidator">
		<property name="tokenManager" ref="tokenManager" />
	</bean>

	<aop:config>
		<aop:pointcut id="lesson"
			expression="execution(* org.harper.otms.lesson.service.impl.*.*(..))" />
		<aop:pointcut id="profile"
			expression="execution(* org.harper.otms.profile.service.impl.*.*(..))" />
		<aop:pointcut id="accounting"
			expression="execution(* org.harper.otms.accounting.service.impl.*.*(..))" />
		<aop:pointcut id="support"
			expression="execution(* org.harper.otms.support.service.impl.*.*(..))" />

		<aop:pointcut id="auth"
			expression="execution(* org.harper.otms.auth.service.impl.*.*(..))" />

		<aop:advisor order="2" pointcut-ref="auth" advice-ref="txAdvice" />
		
		<aop:advisor order="3" pointcut-ref="lesson" advice-ref="txAdvice" />
		<aop:advisor order="3" pointcut-ref="profile" advice-ref="txAdvice" />
		<aop:advisor order="3" pointcut-ref="accounting" advice-ref="txAdvice" />
		<aop:advisor order="3" pointcut-ref="support" advice-ref="txAdvice" />
		
		<aop:aspect order="1" ref="errorHandler">
			<aop:around method="checkError" pointcut-ref="auth" />
		</aop:aspect>

		<aop:aspect order="1" ref="errorHandler">
			<aop:around method="checkError" pointcut-ref="lesson" />
			<aop:around method="checkError" pointcut-ref="profile"/>
			<aop:around method="checkError" pointcut-ref="accounting"/>
			<aop:around method="checkError" pointcut-ref="support"/>
		</aop:aspect>

		<aop:aspect order="2" ref="tokenValidator">
			<aop:around method="validateToken" pointcut-ref="lesson" />
			<aop:around method="validateToken" pointcut-ref="profile" />
			<aop:around method="validateToken" pointcut-ref="accounting" />
			<aop:around method="validateToken" pointcut-ref="support" />
		</aop:aspect>
	</aop:config>
</beans> 