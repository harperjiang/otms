<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
	<persistence-unit name="calendar" transaction-type="RESOURCE_LOCAL">
		<non-jta-data-source>java:comp/env/jdbc/OTMSDatasource</non-jta-data-source>
		<mapping-file>META-INF/eclipselink-orm.xml</mapping-file>
		<class>org.harper.otms.calendar.entity.Tutor</class>
		<class>org.harper.otms.calendar.entity.Client</class>
		<class>org.harper.otms.calendar.entity.Lesson</class>
		<class>org.harper.otms.calendar.entity.CalendarEntry</class>
		<class>org.harper.otms.calendar.entity.RepeatEntry</class>
		<class>org.harper.otms.calendar.entity.OneoffEntry</class>
		<class>org.harper.otms.calendar.entity.LessonItem</class>
		<class>org.harper.otms.calendar.entity.Timesheet</class>
		<class>org.harper.otms.auth.entity.User</class>
		<class>org.harper.otms.calendar.entity.ActionLog</class>
		<class>org.harper.otms.calendar.entity.Todo</class>
		<properties>
			<property name="eclipselink.jdbc.batch-writing" value="JDBC"/>
			<property name="eclipselink.logging.level" value="ALL"/>
			<property name="eclipselink.logging.thread" value="true"/>
			<property name="eclipselink.logging.timestamp" value="true"/>
			<property name="eclipselink.logging.session" value="true"/>
			<property name="eclipselink.logging.exceptions" value="true"/>
			<property name="eclipselink.logging.connection" value="true"/>
		</properties>
	</persistence-unit>
</persistence>
